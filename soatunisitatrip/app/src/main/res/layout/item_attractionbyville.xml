<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:id="@+id/containerattraction"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/image_attraction"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:scaleType="centerCrop"


        android:src="@drawable/jam" />


    <TextView
        android:id="@+id/nom_attraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:text="MONASTIR"

        android:textColor="#25ab25"
        android:textSize="25dp"

        android:textStyle="bold|italic"

        />
    <TextView
        android:id="@+id/adresse_attraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="Rue de Kairouan, Tunisie."

        android:textColor="#A9A9A9"
        android:textSize="20dp"


        />

</LinearLayout>