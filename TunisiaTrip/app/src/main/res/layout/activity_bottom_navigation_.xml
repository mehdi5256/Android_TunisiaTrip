<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/jam" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:text="EL JEM"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/meduim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        app:itemIconTint="@color/color_meduim_navigation"
        app:itemTextColor="@color/color_meduim_navigation"
        app:menu="@menu/middle_action_bar">
    </android.support.design.widget.BottomNavigationView>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/meduim"
        tools:layout="@layout/fragment_fragment_home" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#25ab25"
        app:itemIconTint="@color/color"
        app:itemTextColor="@color/color"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>



</RelativeLayout>